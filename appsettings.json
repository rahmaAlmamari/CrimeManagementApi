{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=CrimeDB;Username=postgres;Password=1234A"
  },


  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "Port": 587,
    "SenderName": "Crime Management System",
    "SenderEmail": "crime.alerts@districtcore.com",
    "Password": "your_app_password_here",
    "EnableSsl": true
  },

  "Jwt": {
    "Key": "ThisIsASecretKeyForJwtSigningChangeItNow!",
    "Issuer": "CrimeManagementApi",
    "Audience": "CrimeManagementApiUsers",
    "ExpireMinutes": 120
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedOrigins": [
    "http://localhost:3000",
    "https://your-frontend-url.com"
  ],
  "AllowedHosts": "*"
}