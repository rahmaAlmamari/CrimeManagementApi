{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=CrimeDB;Username=postgres;Password=1234A"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "crime.alerts@districtcore.com",
    "FromEmail": "crime.alerts@districtcore.com",
    "Password": "${EMAIL_PASSWORD:-your_app_password_here}",
    "EnableSsl": true
  },
  "TwilioSettings": {
    "AccountSid": "${TWILIO_ACCOUNT_SID}",
    "AuthToken": "${TWILIO_AUTH_TOKEN}",
    "PhoneNumber": "${TWILIO_PHONE_NUMBER}"
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "CrimeManagementApi",
    "Audience": "CrimeManagementApiUsers",
    "ExpireMinutes": 120
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "https://your-frontend-url.com"
  ],
  "AllowedHosts": "*"
}