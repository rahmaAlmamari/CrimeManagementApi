{
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Port=5432;Database=CrimeDB;Username=postgres;Password=${DB_PASSWORD:-1234A}"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "EmailSettings": {
    "SmtpServer": "localhost",
    "SmtpPort": 25,
    "Username": "noreply@crimeapi.com",
    "FromEmail": "noreply@crimeapi.com",
    "Password": "${EMAIL_PASSWORD:-dummy}",
    "EnableSsl": false
  },
  "TwilioSettings": {
    "AccountSid": "${TWILIO_ACCOUNT_SID}",
    "AuthToken": "${TWILIO_AUTH_TOKEN}",
    "PhoneNumber": "${TWILIO_PHONE_NUMBER}"
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "CrimeManagementApi",
    "Audience": "CrimeManagementApiUsers",
    "ExpireMinutes": 120
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "https://your-frontend-url.com"
  ],
  "AllowedHosts": "*"
}